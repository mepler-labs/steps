{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts*"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "errorsAsWarnings": true
  }
}
