{
  "include": [
    "src/**/*.ts",
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "sourceMap": false,
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "declaration": true,
    "types" : ["node"],
    "outDir": ".build",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
