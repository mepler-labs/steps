{
  "include": [
    "src/**/*.ts",
    "node_modules/@types"
  ],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "lib": ["es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../.build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
